<!-- Application -->
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div id="typed-strings">
					<p>Where would you like to <br><strong>Deliver</strong>?</p>
				</div>
				<span id="typed"></span>
				<hr>
				<div id="app">
					<form id="app-form" name="app-form" method="POST" action="account">
						<div class="form-group">
                <label for="addressLabel">Address 1</label>
                <input id="address" name="address1" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="addressLabel">Address 2</label>
                <input id="address" name="address2" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="addressLabel">Address 3</label>
                <input id="address" name="address3" class="form-control" type="text" />
            </div>
						<div class="after">
						</div>
						<span class="btn btn-warning" id="add_field_button"> <!-- Functionality not added yet (adds a new address label)-->
							<i class="fa fa-plus"></i> <input type="reset" value="Add"/>
						</span>
						<span class="btn btn-warning">
							<i class="fa fa-location-arrow"></i> <input type="submit" value="Submit"/> <!-- Links to the user's account, no functionality yet since the server side has not been implemented yet -->
						</span>
					</form>
				</div>
			</div>
		</div>
	</div>

