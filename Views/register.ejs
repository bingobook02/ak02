<% include partials/header %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div id="loginForm">
        <h5>Register</h4>
        <hr>
        <form id="app-form" name="app-form" method="POST" action="/register">
          <div class="form-group">
              <input id="username" name="username" placeholder="username" class="form-control" type="text" />
          </div>
          <div class="form-group">
              <input id="password" name="password" placeholder="password" class="form-control" type="password" />
          </div>
          <span class="btn btn-warning">
            <i class="fa fa-plus"></i> <input type="submit" value="Register"/> <!-- Links to the user's account, no functionality yet since the server side has not been implemented yet -->
          </span>
        </form>
      </div>
    </div>
  </div>
</div>
